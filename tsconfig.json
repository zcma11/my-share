{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "paths": {
      "api": ["./src/client/src/api/index.ts"]
    }
  },
  "include": ["src/client/src/**/*.ts", "src/client/src/**/*.d.ts", "src/client/src/**/*.tsx", "src/client/src/**/*.vue"],
  // "references": [{ "path": "./tsconfig.node.json" }]
}
